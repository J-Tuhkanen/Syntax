@page
@model SubmitModel

<form id="registerForm" method="post">
    <h2>Create a new account.</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
        <input asp-for="Input.Title" class="form-control" aria-required="true" />
        <label asp-for="Input.Title"></label>
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Input.SubmitBody" class="form-control" aria-required="true" />
        <label asp-for="Input.SubmitBody"></label>
        <span asp-validation-for="Input.SubmitBody" class="text-danger"></span>
    </div>
    <button hidden="hidden" type="submit"/>
</form>
